using System;
using System.Drawing;
using System.Windows.Forms;

namespace PARCIAL01
{
    /*
     INTEGRANTES: Bayron Ocampo Vargas
    */
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
            BackColor = Color.Black;
            DoubleBuffered = true;
            Paint += Form1_Paint;
            Text = "Bayron Ocampo Vargas";
        }


        private void Form1_Paint(object sender, PaintEventArgs e)
        {
            Graphics g = e.Graphics;
            int centerX = this.ClientSize.Width / 2;
            int centerY = this.ClientSize.Height / 2;
            int rectWidth = 300;
            int rectHeight = 300;
            double rotationAngle = 140;

            for (int i = 0; i <= 4; i++)
            {
                switch (i)
                {
                    case 1:
                        rectWidth -= 87;
                        rectHeight -= 87;
                        break;
                    case 2:
                        rotationAngle = -25;
                        rectWidth -= 50;
                        rectHeight -= 74;
                        break;
                    case 3:
                        rotationAngle = -69;
                        rectWidth -= 24;
                        rectHeight -= 54;
                        break;
                    case 4:
                        rotationAngle = -50;
                        rectWidth -= 7;
                        rectHeight -= 44;
                        break;
                }
                int x = centerX - (rectWidth / 2);
                int y = centerY - (rectHeight / 2);

                g.TranslateTransform(centerX, centerY);
                g.RotateTransform((float)(i * rotationAngle));
                g.TranslateTransform(-centerX, -centerY);

                // Dibujar las líneas del rectángulo
                g.DrawLine(Pens.White, x, y, x + rectWidth, y);
                g.DrawLine(Pens.White, x + rectWidth, y, x + rectWidth, y + rectHeight);
                g.DrawLine(Pens.White, x + rectWidth, y + rectHeight, x, y + rectHeight);
                g.DrawLine(Pens.White, x, y + rectHeight, x, y);
            }
            g.ResetTransform();
        }


    }
}